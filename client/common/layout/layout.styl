html
  position relative

#content
  padding-bottom 50px
  background-color white

#drawers
  //background-color #323949
  background-color #f5f5f5
  color white

#drawers .snap-drawer
  padding: 15px 20px

#main
  padding-top 70px

#main .row aside
  border-radius 0
  border-top none
  border-bottom none

#main .row article
  padding-top 20px
  padding-bottom 20px

html,
body,
#content,
#main,
  min-height 100%

.row aside
  padding-top 20px
  padding-bottom 20px

.row-full-height
  display table
  height 100%

.row-full-height > *[class*='col-']
  display table-cell
  float none
  vertical-align top

.row-full-height > aside.full-height-background
  position absolute
  height 100%
  top 0
  margin-bottom -50px

@media (min-width: 1200px)
  .visible-lg-table-cell
    display table-cell !important

@media (max-width: 1199px)
  .visible-lg-table-cell
    display none !important
