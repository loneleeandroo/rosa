html
  position relative

#content
  padding-bottom 50px
  background-color white

#drawers
  //background-color #323949
  background-color #f5f5f5
  color white

#drawers .snap-drawer
  padding: 15px 20px

#main
  padding-top 70px

#main .row aside
  border-radius 0
  border-top none
  border-bottom none
  
html,
body,
#content,
#main,
  min-height 100%

.row aside
  //padding-top 20px
  padding-bottom 20px

@media (min-width: 992px)
  .visible-lg-table-cell
    display table-cell !important

  .row-full-height
    display table
    height 100%

  .row-full-height > *[class*='col-']
    display table-cell
    float none
    vertical-align top

  .row-full-height > aside.full-height-background
    position absolute
    height 100%
    top 0
    margin-bottom -50px

@media (max-width: 991px)
  .visible-lg-table-cell
    display none !important
