template(name="header")
  nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
    .container-fluid
      .navbar-header
        if currentUser
          button.navbar-drawer-toggle.pull-left
            span.sr-only Toggle Student Search Form
            i.fa.fa-search.fa-lg
        button.navbar-toggle(data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
          span.sr-only Toggle
          i.fa.fa-user.fa-lg
        span.navbar-brand-container.text-center
          if currentUser
            if student
              .navbar-brand
                span.badge {{student.sid}} 
                span {{student.name}}
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          if currentUser
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                span {{user.profile.firstName}} {{user.profile.lastName}}
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='/') Dashboard
                li
                  a(href='/profile') Profile
                li.divider
                li
                  a(href='/sign-out') Sign Out
          else 
            li
              a(href='/sign-in') Sign In