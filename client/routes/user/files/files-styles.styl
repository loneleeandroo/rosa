.row.thumbnail-row
  margin-left -30px
  margin-right -30px
  overflow scroll

p.lead.notes-header
  font-size 25px

input.file-input
  position: absolute;
  top 0
  right 0
  margin 0
  font-size 23px
  cursor pointer
  opacity 0
  width 100%
  direction ltr

a.thumbnail
  height 250px
  border-width 2px 

a.add-thumbnail.thumbnail
  border-style dashed
  color #ddd

a.add-thumbnail.thumbnail:hover
  text-decoration none
  color #428bca

a.lesson-thumbnail.thumbnail > .lesson-thumbnail-inner
  background-color #f8f8f8

a.thumbnail .thumbnail-inner
  display table
  width 100%
  height 100%

a.thumbnail > .thumbnail-inner > .thumbnail-caption
  display table-cell
  vertical-align middle

.page-header.thumbnail-header:first-child
  margin-top 0

.row article
  padding-left 40px
  padding-right 40px

ul.thumbnail-group
  list-style none
  padding 0

.media img.media-object.media-thumbnail
  height 60px
  width 60px
  border 1px solid #ddd

.media > .media-body .media-heading-container
  height 60px
  display table
  padding-left 15px

.media > .media-body .media-heading-container > .media-heading 
  display table-cell
  vertical-align middle

ul.media-list.add-module
  margin-top 20px

ul.slides
  margin 0
  min-height 270px

ul.add-topic
  padding-left 25px
  margin-bottom 20px
  margin-top 20px

ul.media-list.module-list li.media
  overflow visible

ul.media-list.module-list ul.topic-list
  min-height 5px
  padding-left 25px

ul.media-list.module-list ul.topic-list > li.media
  margin-top 0

li.media.add-media a.media-body
  border 2px dashed #ddd
  border-radius 4px
  padding-top 0
  padding-bottom 0

li.media.add-media > .media-body .media-heading-container
  width 100%

li.media.add-media > .media-body .media-heading-container > .media-heading 
  color #ddd

ul.media-list li.media .media-body .media-heading-container .media-heading .badge
  background-color #428bca

ul.media-list li.media.active .media-body .media-heading-container .media-heading .badge
  background-color white
  color #428bca


