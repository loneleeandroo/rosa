template(name="history")
  .row
    .pull-left
      button.btn.btn-success.btn-md(style="position:relative") 
        i.fa.fa-plus
        span.hidden-xs Add History
    .pull-right
      .btn-group
        button.btn.btn-default.btn-md(type='button')
          span Most Recent
          button.btn.btn-default.btn-md.dropdown-toggle(type='button', data-toggle='dropdown')
            span.caret
            span.sr-only Toggle Dropdown                
          ul.dropdown-menu.pull-right(role='menu')
            li
              a(href='#') Most Recent
            li
              a(href='#') Least Recent
            li
              a(href='#') A-Z Name
            li
              a(href='#') Z-A Name
            li
              a(href='#') Newest Comment
            li
              a(href='#') Oldest Comment

  .row
    hr